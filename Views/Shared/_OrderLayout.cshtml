        <script>
            $(document).ready(function(){
                
                $("#thanhToan").click(function(){
                    var price = $("#plusprice").attr("class");
                    var maqr = "https://api.vietqr.io/image/970418-45010006478997-VeSRKYu.jpg?accountName=HOANG%20TRUNG%20KIEN&amount=" + price;
                    console.log(price)
                    $(".ma-qr").attr('src', maqr);

                    $(".ma-qr").css({
                        "display": "block"
                        });
                    })

                
                var address = sessionStorage.getItem('Address')
                var phone = sessionStorage.getItem('Phonenumber')
                var name = sessionStorage.getItem('Name')
                var id = sessionStorage.getItem('Id')

                $("#phone").val(phone)
                $("#name").val(name)
                $("#address").val(address)
                
                $('.close-qr').click(function(){
                    $(".ma-qr").css({
                        "display": "none"
                    });
                })

                $('.dele').click(function(){
                    event.preventDefault();
                    var dele = $(this).attr('href');
                    var newdele = dele + id;
                    $(this).attr('href', newdele);
                    window.location.href = $(this).attr("href");
                })
                $(".thanhCong").click(function(){
                    $("#parent").find(".cart").each(function() {
                        var value = $(this).attr("name");
                        $.get("/order/Updatecart", {
                            idcart : value,
                            status : 1,
                            number : 0
                        }, function(){})

                        @* console.log("Giá trị của phần tử div có lớp cart là: " + value); *@
                    });
                })
                $(".")
            })
                
            
            
