@{
    ViewData["Title"] = "Book Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@* @model Book_Store.Controllers.BookstoreController.Bookviewmodel *@

            <div class="wapper">

                <div class="product-info">
                    <h2>@Model.book.Name</h2>
                </div>
                <div class="product">
                    <div class="product-imgs">
                        <div class="product-img-main">
                            <img src="@Model.book.Image" alt="">
                        </div>
                    </div>
                    <div class="order">
                        <div class="price-sale">
                            <del class="price">@Model.book.Price đ</del>
                            <div class="sale">@Model.book.Price đ</div>
                        </div>
                        @* <form action=""> *@
                            <div class="number form-outline">
                                <h5>Số Lượng:</h5><input type="number" min="1" max="@Model.book.Number" value="1" id="typeNumber" class="form-control" />
                            </div>
                            <button type="button" id="@Model.book.Id" class="orders btn btn-primary">Thêm Vào Giỏ Hàng</button>
                            <!-- <input class="buy" type="submit" value="Thêm Giỏ Hàng"> -->
                        @* </form> *@
                    </div>
                </div>
                <div class="information">
                    <div class="btn-mo-ta bg " onclick="open_MoTa()">Mô Tả</div>
                    <div class="btn-danh-gia" onclick="open_DanhGia()">Đánh Giá</div>

                </div>
                <div class="mota-danhgia">
                    <div class="mo-ta open">
                        <div style="font-size: 20px; font-weight: 600;" class="">
                            MÔ TẢ SẢN PHẨM:
                        </div>
                        <div class="" style="font-size: 15px;">

                        Tác Phẩm: @Model.book.Name <br>
                        Tác giả: @foreach (var item in @Model.authors)
                        {
                            if(@item.Id == @Model.book.AuthorId ){
                                @item.Name;
                            }
                        } <br>
                        Sách thuộc thể Loại:  @foreach (var item in @Model.categories)
                        {
                            if(@item.Id == @Model.book.CategoryId ){
                                @item.Name;
                            }
                        }
                        <br>
                        <br>
                        <div style="font-weight: 600; font-size: 17px;" class="">

                            CHI TIẾT SẢN PHẨM:
                        </div>
                        @Model.book.Discription
                        </div>
                    </div>
                    <div class="danh-gia">
                        <span>(2) Đánh Giá</span>
                        <div class="search">

                            <div class="input-group mb-3">
                                <input type="text" class="form-control" id="comment" placeholder="Viết đánh giá " aria-label="@Model.book.Id" aria-describedby="basic-addon2">
